<%- include("../includes/head.ejs") %>

</head>

<body>
    <%- include("../includes/navigation.ejs") %>

    <%- include("../includes/inner-scroll-start.ejs") %>

    <main class="main-container">
        <h1 class="main-header">Signup</h1>
        <form id="signup-form" class="auth-container" action="/signup" method="POST" enctype="multipart/form-data">
            <div class="signup-section-1">
                <div class="form-group">
                    <label for="firstName">First Name</label>
                    <input 
                        class="<%= validationErrors.find(e => e.param === 'firstName') ? 'form-control invalid' : 'form-control'%>"
                        type="text"    
                        name="firstName" 
                        id="firstName" 
                        value="<%= oldInput.firstName %>"
                        required
                    >       
                </div>
                <div class="form-group">
                    <label for="lastName">Last Name</label>
                    <input 
                        class="<%= validationErrors.find(e => e.param === 'lastName') ? 'form-control invalid' : 'form-control'%>"
                        type="text"    
                        name="lastName" 
                        id="lastName" 
                        value="<%= oldInput.lastName %>"
                        required
                    >
                </div>
                <div class="form-group">
                    <label for="email">E-Mail</label>
                    <input 
                        class="<%= validationErrors.find(e => e.param === 'email') ? 'form-control invalid' : 'form-control'%>"
                        type="email"    
                        name="email" 
                        id="email" 
                        value="<%= oldInput.email %>"
                        required
                    >
                </div>
                <div class="form-group">
                    <label for="phone">Phone</label>
                    <input 
                        class="<%= validationErrors.find(e => e.param === 'phone') ? 'form-control invalid' : 'form-control'%>"
                        type="tel"
                        name="phone" 
                        pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}"
                        id="phone" 
                        value="<%= oldInput.phone %>"
                        maxlength="50"
                        placeholder="e.g. 555-555-5555"
                        required
                    >
                </div>
            </div>

            <div class="signup-section-2 hide-section">
                <div class="form-group">
                    <label for="addressLineMain">Address 1</label>
                    <input 
                        class="<%= validationErrors.find(e => e.param === 'addressLineMain') ? 'form-control invalid' : 'form-control'%>" 
                        type="text"    
                        name="addressLineMain" 
                        id="addressLineMain" 
                        value="<%= oldInput.addressLineMain %>"
                        required
                    >
                </div>
                <div class="form-group">
                    <label for="addressLineSecondary">Address 2</label>
                    <input 
                        class="<%= validationErrors.find(e => e.param === 'addressLineSecondary') ? 'form-control invalid' : 'form-control'%>" 
                        type="text"    
                        name="addressLineSecondary" 
                        id="addressLineSecondary" 
                        value="<%= oldInput.addressLineSecondary %>"
                    >
                </div>
                <div class="form-group">
                    <label for="city">City</label>
                    <input 
                        class="<%= validationErrors.find(e => e.param === 'city') ? 'form-control invalid' : 'form-control'%>" 
                        type="text"    
                        name="city" 
                        id="city" 
                        value="<%= oldInput.city %>"
                        required
                    >
                </div>
                <div class="form-group">
                    <label for="state">State</label>
                    <input 
                        class="<%= validationErrors.find(e => e.param === 'state') ? 'form-control invalid' : 'form-control'%>" 
                        type="text"    
                        name="state" 
                        id="state" 
                        value="<%= oldInput.state %>"
                        required
                    >
                </div>
                <div class="form-group">
                    <label for="zip">Zip</label>
                    <input 
                        class="<%= validationErrors.find(e => e.param === 'zip') ? 'form-control invalid' : 'form-control'%>" 
                        type="text"    
                        pattern="[0-9]{5}"
                        name="zip" 
                        id="zip" 
                        value="<%= oldInput.zip %>"
                        required
                    >
                </div>
            </div>
            
            <div class="signup-section-3 hide-section">
                <div class="form-group">
                    <label for="classYear">Class Graduation Year</label>
                    <input 
                        class="<%= validationErrors.find(e => e.param === 'classYear') ? 'form-control invalid' : 'form-control'%>" 
                        type="number"
                        name="classYear" 
                        id="classYear" 
                        value="<%= oldInput.classYear %>"
                        required
                    >
                </div>
                <div class="form-group">
                    <label for="major">Major</label>
                    <input 
                        class="<%= validationErrors.find(e => e.param === 'major') ? 'form-control invalid' : 'form-control'%>" 
                        type="text"    
                        name="major" 
                        id="major" 
                        value="<%= oldInput.major %>"
                        required
                    >
                </div>
                <div class="form-group">
                    <label for="occupation">Occupation</label>
                    <input 
                        class="<%= validationErrors.find(e => e.param === 'occupation') ? 'form-control invalid' : 'form-control'%>" 
                        type="text"    
                        name="occupation" 
                        id="occupation" 
                        value="<%= oldInput.occupation %>"
                        required
                    >
                </div>
                <div class="form-group">
                    <label for="company">Company</label>
                    <input 
                        class="<%= validationErrors.find(e => e.param === 'company') ? 'form-control invalid' : 'form-control'%>" 
                        type="text"    
                        name="company" 
                        id="company" 
                        value="<%= oldInput.company %>"
                    >
                </div>
                <div class="form-group">
                    <label for="image">Profile Image</label>
                    <input
                        class="<%= validationErrors.find(e => e.param === 'image') ? 'form-control invalid' : 'form-control'%>"
                        type="file"
                        name="image"
                        id="image"
                    />
                </div>
            </div>

            <div class="signup-section-4 hide-section">
                <div class="form-group">
                    <label for="password">Password</label>
                    <input 
                        class="<%= validationErrors.find(e => e.param === 'password') ? 'form-control invalid' : 'form-control'%>" 
                        type="password" 
                        name="password" 
                        id="password"
                        value="<%= oldInput.password %>"
                        required
                    >
                </div>
                <div class="form-group">
                    <label for="confirmPassword">Confirm Password</label>
                    <input 
                        class="<%= validationErrors.find(e => e.param === 'confirmPassword') ? 'form-control invalid' : 'form-control'%>" 
                        type="password" 
                        name="confirmPassword" 
                        id="confirmPassword" 
                        value="<%= oldInput.confirmPassword %>"
                        required
                    >
                </div>
            </div>            
            
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
            <div class="auth-container__actions">
                <button id="signup-button-prev" class="btn btn-core hide-section" type="button">Previous</button>
                <button id="signup-button-next" class="btn btn-core d-block ml-auto" type="button" page="1">Next</button>
            </div>
            <% if (errorMessage) { %>
                <div class="alert alert-danger mt-3" role="alert">
                    <%= errorMessage %>
                </div>
            <% } %>
        </form>
    </main>

    <%- include("../includes/inner-scroll-end.ejs") %>

<%- include('../includes/end.ejs') %>