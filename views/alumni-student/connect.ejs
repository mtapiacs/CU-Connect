<%- include("../includes/head.ejs") %>
    <link rel="stylesheet" type="text/css" href="/css/alumni.css" />
</head>

<body>
    <%- include("../includes/navigation.ejs") %>

    <%- include("../includes/inner-scroll-start.ejs") %>

    <main class="main-container">
        <h1 class="main-header">Connect</h1>
        <div class="row mt-3">
            <div class="col-md-6">
                <input type="text" class="form-control" id="nameFilter" placeholder="Unified Name Search">
            </div>
            <div class="col-md-2">
                <input type="number" class="form-control" id="classYear" placeholder="Class Of">
            </div>
            <div class="col-md-2">
                <select class="form-control" id="major">
                    <option value="">Select Major</option>
                    <option value="Computer Science">Computer Science</option>
                    <option value="Business">Business</option>
                    <option value="Others">Others</option>
                </select>
            </div>
            <div class="col-md-2">
                <button style="width:100%;" class="btn btn-core" type="button" onclick="searchConnection()">
                    Search
                </button>
            </div>
        </div>
        <div id="connect-table-area" class="row mt-4">
            <table class="table">
                <thead id="connect-table-header">
                    <tr>
                        <th scope="col">First Name</th>
                        <th scope="col">Last Name</th>
                        <th scope="col">Class Year</th>
                        <th scope="col">Major</th>
                    </tr>
                </thead>
                <tbody id="connect-payload">
                </tbody>
            </table>
        </div>

        <!-- Modal-->
        <div class="modal fade" id="connectModal" tabindex="-1" role="dialog" aria-labelledby="connectModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="connectModalLabel">Do you want to request connection?</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body p-0 b-0">
                        <textarea id="requestMessage" placeholder="Connection Message Here!" rows="5" style="resize:none;border:none;" class="w-100 form-control"></textarea>
                        <input id="requestId" type="hidden" name="requestId" value="<%= userId %>" />
                        <input id="connectCsrf" type="hidden" name="_csrf" value="<%= csrfToken %>"/>
                    </div>
                    <div class="modal-footer" style="justify-content: space-evenly;">
                        <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Close</button>
                        <button id="requestConnectionButton" type="button" class="btn btn-core">Request Connection</button>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <%- include("../includes/inner-scroll-end.ejs") %>

    <script src="/js/alumni.js"></script>

<%- include("../includes/end.ejs") %>