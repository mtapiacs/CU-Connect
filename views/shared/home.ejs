<%- include("../includes/head.ejs") %>

</head>

<body>
    <%- include("../includes/navigation.ejs") %>

    <%- include("../includes/inner-scroll-start.ejs") %>

    <main class="main-container">  
        <div id="main-carousel" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <% for (let i = 0; i < homeConfig.carouselItems.length; i++) { %>
                    <div class="carousel-item <%= (i === 0) ? 'active' : '' %>">
                        <img src="<%= homeConfig.carouselItems[i].imgPath %>" class="d-block w-100 carousel-img" alt="...">
                        <div class="carousel-caption d-none d-md-block" style="background-color: rgba(0,0,0,0.6);border-radius:12px;">
                            <h5><%= homeConfig.carouselItems[i].headerText %></h5>
                            <p><%= homeConfig.carouselItems[i].bodyText %></p>
                        </div>
                    </div>
                <% } %>
            </div>
            <a class="carousel-control-prev" href="#main-carousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#main-carousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>  
        <div class="home-info mt-4">
            <div class="home-info__boxes">
                <h3>Events</h3>
                <p><%= homeConfig.eventsText %></p>
            </div>
            <div class="home-info__boxes">
                <h3>Info</h3>
                <p><%= homeConfig.infoText %></p>
            </div>
            <div class="home-info__boxes">
                <h3>Others</h3>
                <p><%= homeConfig.othersText %></p>
            </div>
        </div>
    </main>

    <%- include("../includes/inner-scroll-end.ejs") %>

<%- include('../includes/end.ejs') %>