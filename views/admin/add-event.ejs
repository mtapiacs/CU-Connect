<%- include("../includes/head.ejs") %>

</head>

<body>
    <%- include("../includes/navigation.ejs") %>

    <%- include("../includes/inner-scroll-start.ejs") %>

    <main class="main-container">
        <h1 class="main-header">Add Event</h1>
        <form class="auth-container mt-3" action="/admin/events/add-event" method="POST">
            <div class="form-group">
                <input
                    class="form-control"
                    type="text"
                    name="event-name"
                    id="event-name"
                    placeholder="Event Name"
                >
            </div>
            <div class="form-group">
                <input
                    class="form-control"
                    type="date"
                    name="event-date"
                    id="event-date"
                    placeholder="MM-DD-YY"
                >
            </div>
            <div class="form-group">
                <input
                    class="form-control"
                    type="time"
                    name="event-time"
                    id="event-time"
                >
            </div>
            <div class="form-group">
                <textarea
                    class="form-control" 
                    name="event-description" 
                    id="event-description" 
                    rows="5"
                ></textarea>
            </div>
            <div class="form-group">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                <button class="btn btn-block btn-core" type="submit">Add Event</button>
            </div>
        </form>
    </main>

    <%- include("../includes/inner-scroll-end.ejs") %>

<%- include("../includes/end.ejs") %>