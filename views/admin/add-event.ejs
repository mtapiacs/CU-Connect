<%- include("../includes/head.ejs") %>

</head>

<body>
    <%- include("../includes/navigation.ejs") %>

    <main>
        <h1 class="main-header">Add Event</h1>
        <form class="request-event-container" action="/admin/events/add-event" method="POST">
            <div class="form-control">
                <input
                    type="text"
                    name="event-name"
                    id="event-name"
                    placeholder="Event Name"
                >
            </div>
            <div class="form-control">
                <input
                    class="form-control__time"
                    type="date"
                    name="event-date"
                    id="event-date"
                    placeholder="MM-DD-YY"
                >
                <input
                    class="form-control__time"
                    type="time"
                    name="event-time"
                    id="event-time"
                >
            </div>
            <div class="form-control">
                <textarea 
                    name="event-description" 
                    id="event-description" 
                    rows="5"
                ></textarea>
            </div>
            <div class="form-control">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                <button class="btn btn--main" type="submit">Add Event</button>
            </div>
        </form>
    </main>

<%- include("../includes/end.ejs") %>