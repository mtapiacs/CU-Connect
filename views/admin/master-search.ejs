<%- include("../includes/head.ejs") %>

</head>

<body>
    <%- include("../includes/navigation.ejs") %>

    <main class="main-container">
        <h1 class="main-header">Alumni Management</h1>
        <div class="row mt-3">
            <div class="col-md-2 col-sm-4 my-2">
                <input type="text" class="form-control" id="firstName" placeholder="First Name">
            </div>
            <div class="col-md-2 col-sm-4 my-2">
                <input type="text" class="form-control" id="lastName" placeholder="Last Name">
            </div>
            <div class="col-md-2 col-sm-4 my-2">
                <input type="email" class="form-control" id="email" placeholder="Email">
            </div>
            <div class="col-md-2 col-sm-4 my-2">
                <input type="number" class="form-control" id="classOf" placeholder="Class Of">
            </div>
            <div class="col-md-2 col-sm-4 my-2">
                <select class="form-control" id="major">
                    <option value="">Select Major</option>
                    <option value="Computer Science">Computer Science</option>
                    <option value="business">Business</option>
                    <option value="others">Others</option>
                </select>
            </div>
            <div class="col-md-2 col-sm-4 my-2">
                <!-- <button type="button" class="btn btn-outline-secondary">Search</button> -->
                <div class="input-group">
                    <div class="input-group-append" style="flex:1;">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                        <button onclick="searchAlumni(this);" type="button" class="btn btn-outline-secondary" style="width:75%;">Search</button>
                        <button id="searchButton" type="button" style="width:25%;" class="btn btn-outline-secondary dropdown-toggle-split" data-toggle="collapse" data-target="#filterCollapse" aria-expanded="false" aria-controls="filterCollapse">
                        +
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <div class="row collapse" id="filterCollapse">
            <div class="col-md-2 col-sm-4 my-2">
                <input type="text" class="form-control" id="address1" placeholder="Address 1">
            </div>
            <div class="col-md-2 col-sm-4 my-2">
                <input type="text" class="form-control" id="address2" placeholder="Address 2">
            </div>
            <div class="col-md-2 col-sm-4 my-2">
                <input type="text" class="form-control" id="city" placeholder="City">
            </div>
            <div class="col-md-2 col-sm-4 my-2">
                <input type="text" class="form-control" id="state" placeholder="State">
            </div>
            <div class="col-md-2 col-sm-4 my-2">
                <input type="number" class="form-control" id="zip" placeholder="ZIP">
            </div>
            <div class="col-md-2 col-sm-4 my-2">
            </div>
            <div class="col-md-2 col-sm-4 my-2">
                <input type="text" class="form-control" id="phone" placeholder="Phone">
            </div>
            <div class="col-md-2 col-sm-4 my-2">
                <input type="text" class="form-control" id="company" placeholder="Company">
            </div>
            <div class="col-md-2 col-sm-4 my-2">
                <input type="text" class="form-control" id="occupation" placeholder="Occupation">
            </div>
        </div>
        <div class="row mt-4">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">First Name</th>
                        <th scope="col">Last Name</th>
                        <th scope="col">Major</th>
                        <th scope="col">Occupation</th>
                        <th scope="col">Company</th>
                    </tr>
                </thead>
                <tbody id="alumni-payload">
                </tbody>
            </table>
        </div>
    </main>

    <script src="/js/admin.js"></script>

<%- include("../includes/end.ejs") %>